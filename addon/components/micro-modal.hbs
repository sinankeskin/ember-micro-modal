<div
  id={{this.elementId}}
  class="modal micromodal-slide"
  aria-hidden="true"
  ...attributes
  {{did-insert this._initialize}}
  {{did-update this._update @show}}
>
  <div class="modal__overlay" tabindex="-1" {{click-to-overlay @clickToOverlay}}>
    <div class="modal__container" role="dialog" aria-modal="true" aria-labelledby="{{this.elementId}}-title">
      {{yield (hash header=(component 'header'))}}
      {{yield (hash content=(component 'content'))}}
      {{yield (hash footer=(component 'footer'))}}
    </div>
  </div>
</div>